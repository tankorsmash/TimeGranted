{
  "manifest_version": 2,

  "name": "timegranted",
  "description": "A countdown from the first time you log onto your browser",
  "version": "0.4",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },

  "icons": {
  	"16": "icon_16.png",
  	"48": "icon_48.png",
  	"128": "icon.png"
  },

  "content_scripts" : [
  {
      "matches" : ["http://*/*", "https://*/*"],
      "css" : ["granted.css"],
      "js" : ["jquery-2.0.0.js","granted.js"]
  }],

  "permissions": [
     "tabs", "http://*/*", "https://*/*", "history", "notifications", "cookies"
  ],
  "background": {"scripts": ["jquery-2.0.0.js", "granted_background.js"]}

}
